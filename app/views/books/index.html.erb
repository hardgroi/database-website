<%= provide(:title, "Books") %>

<div class="row">
  <div class="col-xs-10 offset-xs-1">
    <div class="row">
      <div class="col-xs-4">
        <%= render 'books/book_search'%>
      </div>
    </div><br>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Author</th>
          <th>Publisher</th>
          <th>Category</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render @books %>
      </tbody>
    </table>
  </div>
</div>
