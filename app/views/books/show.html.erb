<%= provide(:title, "#{@book.title}")%>

<div class="row">
  <div class="col-xs-10 offset-xs-1">
    <h3><%= @book.title %></h3>
    <div class="row">
      <div class="col-xs-6">
        <div class="card">
          <div class="card-block">
            <h5>Author:
              <%= ' ' + @author.first_name unless @author.first_name.nil?%>
              <%= ' ' + @author.middle_name unless @author.middle_name.nil? %>
              <%= ' ' + @author.last_name unless @author.last_name.nil? %>
              <%= ' ' + @author.alt_last_name unless @author.alt_last_name.nil?%>
            </h5>
            <p>ISBN: <%= @book.isbn %></p>
            <p><%= @publisher.pub_name %></p>
            <p><%= @publisher.address %></p>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <h4>Price: <%= @book.price %></h4>
      </div>
    </div>
    <button type="button" class="btn btn-warning">Add to Cart</button>
  </div>
</div>
